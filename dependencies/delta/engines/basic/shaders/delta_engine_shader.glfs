#version 420

layout(binding = 0) uniform sampler2D diffuseTex;

out vec4 out_Color;

in vec4 ex_Pos;
in vec2 ex_Tex;
in vec3 ex_Normal;

layout (binding = 1) uniform ObjectVariables {
	mat4 Transform;
	vec4 MulCol;
	vec2 TexOffset;
	vec2 TexScale;
	vec3 Scale;
	int ColorReplace;
	int Lit;
};

void main(void) {
	if (ColorReplace == 0) {
		out_Color = texture(diffuseTex, ex_Tex).rgba * MulCol;
	}
	else {
		out_Color = MulCol;
	}
}
